<Window
    x:Class="Sirstrap.UI.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Sirstrap.UI.ViewModels"
    Width="400"
    Height="200"
    mc:Ignorable="d"
    CanResize="False"
    d:DesignHeight="200"
    d:DesignWidth="400"
    ExtendClientAreaToDecorationsHint="True"
    Icon="/Assets/favicon.ico"
    Title="Sirstrap"
    WindowStartupLocation="CenterScreen"
    x:DataType="vm:MainWindowViewModel">
    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>
    <Window.Styles>
        <Style Selector="Border.glassBorder">
            <Setter Property="Transitions">
                <Transitions>
                    <DoubleTransition Property="Opacity" Duration="0:0:0.2" />
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2" />
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="Border.glassBorder:pointerover">
            <Setter Property="Opacity" Value="1.0" />
            <Setter Property="RenderTransform" Value="scale(1.05)" />
        </Style>
        <Style Selector="Border.glassBorder:pointerover > TextBlock">
            <Setter Property="Foreground" Value="#FFFFFF" />
        </Style>
        <Style Selector="Border.glassBorder:pointerover /template/ Border#PART_Border">
            <Setter Property="Effect">
                <DropShadowEffect
                    Color="Black"
                    BlurRadius="12"
                    OffsetX="0"
                    OffsetY="3"
                    Opacity="0.5" />
            </Setter>
            <Setter Property="Background">
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Offset="0" Color="#A0454EE6" />
                    <GradientStop Offset="0.5" Color="#80454EE6" />
                    <GradientStop Offset="1" Color="#60454EE6" />
                </LinearGradientBrush>
            </Setter>
        </Style>
    </Window.Styles>
    <Grid>
        <Image Source="avares://Sirstrap/Assets/favicon.ico">
            <Image.Styles>
                <Style Selector="Image">
                    <Style.Animations>
                        <Animation
                            Duration="0:0:2"
                            Easing="SineEaseInOut"
                            IterationCount="Infinite"
                            PlaybackDirection="Alternate">
                            <KeyFrame Cue="0%">
                                <Setter Property="ScaleTransform.ScaleX" Value="1.1" />
                                <Setter Property="ScaleTransform.ScaleY" Value="1.1" />
                                <Setter Property="Opacity" Value="0.4" />
                            </KeyFrame>
                            <KeyFrame Cue="100%">
                                <Setter Property="ScaleTransform.ScaleX" Value="1.2" />
                                <Setter Property="ScaleTransform.ScaleY" Value="1.2" />
                                <Setter Property="Opacity" Value="0.5" />
                            </KeyFrame>
                        </Animation>
                    </Style.Animations>
                </Style>
            </Image.Styles>
        </Image>
        <Border
            MaxWidth="150"
            MaxHeight="150"
            Margin="5,0,0,5"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            BorderBrush="#40FFFFFF"
            BorderThickness="1"
            Classes="glassBorder"
            CornerRadius="5"
            Opacity="0.9">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Offset="0" Color="#80454EE6" />
                    <GradientStop Offset="0.5" Color="#60454EE6" />
                    <GradientStop Offset="1" Color="#40454EE6" />
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect
                    Color="Black"
                    BlurRadius="8"
                    OffsetX="0"
                    OffsetY="2"
                    Opacity="0.3" />
            </Border.Effect>
            <TextBlock
                FontSize="10"
                Padding="10"
                Text="{Binding LastLogMessage}"
                TextTrimming="CharacterEllipsis"
                TextWrapping="Wrap" />
        </Border>
        <StackPanel
            Margin="0,0,5,5"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">
            <Border
                Margin="5,0,0,0"
                BorderBrush="#40FFFFFF"
                BorderThickness="1"
                Classes="glassBorder"
                CornerRadius="5"
                IsVisible="{Binding IsRobloxRunning}"
                Opacity="0.9">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Offset="0" Color="#80454EE6" />
                        <GradientStop Offset="0.5" Color="#60454EE6" />
                        <GradientStop Offset="1" Color="#40454EE6" />
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect
                        Color="Black"
                        BlurRadius="8"
                        OffsetX="0"
                        OffsetY="2"
                        Opacity="0.3" />
                </Border.Effect>
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        FontSize="10"
                        Padding="10"
                        Text="{Binding RobloxProcessCount}" />
                    <Image
                        Height="14"
                        Margin="0,0,10,0"
                        Source="avares://Sirstrap/Assets/Icon2022.ico" />
                </StackPanel>
            </Border>
            <Border
                Margin="5,0,0,0"
                BorderBrush="#40FFFFFF"
                BorderThickness="1"
                Classes="glassBorder"
                CornerRadius="5"
                Opacity="0.9">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Offset="0" Color="#80454EE6" />
                        <GradientStop Offset="0.5" Color="#60454EE6" />
                        <GradientStop Offset="1" Color="#40454EE6" />
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect
                        Color="Black"
                        BlurRadius="8"
                        OffsetX="0"
                        OffsetY="2"
                        Opacity="0.3" />
                </Border.Effect>
                <TextBlock
                    FontSize="10"
                    Padding="10"
                    Text="{Binding CurrentFullVersion}" />
            </Border>
            <Border
                Margin="5,0,0,0"
                BorderBrush="#40FFFFFF"
                BorderThickness="1"
                Classes="glassBorder"
                CornerRadius="5"
                Opacity="0.9">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Offset="0" Color="#80454EE6" />
                        <GradientStop Offset="0.5" Color="#60454EE6" />
                        <GradientStop Offset="1" Color="#40454EE6" />
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect
                        Color="Black"
                        BlurRadius="8"
                        OffsetX="0"
                        OffsetY="2"
                        Opacity="0.3" />
                </Border.Effect>
                <TextBlock
                    FontSize="10"
                    Padding="10"
                    Text="Sirstrap" />
            </Border>
        </StackPanel>
    </Grid>
</Window>