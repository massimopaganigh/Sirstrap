<Window
    x:Class="Sirstrap.UI.Views.SettingsWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Sirstrap.UI.ViewModels"
    mc:Ignorable="d"
    Background="#75151b23"
    CanResize="False"
    ExtendClientAreaToDecorationsHint="True"
    Icon="/Assets/favicon.ico"
    SizeToContent="WidthAndHeight"
    Title="Settings"
    TransparencyLevelHint="AcrylicBlur"
    WindowStartupLocation="CenterOwner"
    x:DataType="vm:SettingsWindowViewModel">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock
            Margin="0,4,0,9"
            HorizontalAlignment="Center"
            Grid.Row="0"
            FontSize="10"
            Text="Sirstrap" />
        <TextBlock
            Grid.Row="1"
            FontSize="28"
            FontWeight="UltraBold"
            Padding="10"
            Text="Settings" />
        <Border
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#212830"
            BoxShadow="0 0 10 0 #212830"
            Grid.Row="2"
            CornerRadius="5"
            Padding="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Margin="0,0,5,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Grid.Column="0"
                    Grid.Row="0"
                    Text="Enable Sirstrap auto-update:" />
                <CheckBox
                    Height="32"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Grid.Column="1"
                    Grid.Row="0"
                    CornerRadius="999"
                    DataContext="{Binding Settings}"
                    IsChecked="{Binding AutoUpdate}" />
                <TextBlock
                    Margin="0,5,5,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Grid.Column="0"
                    Grid.Row="1"
                    Text="Sirstrap update channel name:" />
                <TextBox
                    Width="200"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Left"
                    BorderThickness="0"
                    Grid.Column="1"
                    Grid.Row="1"
                    CornerRadius="999"
                    DataContext="{Binding Settings}"
                    Text="{Binding ChannelName}" />
                <TextBlock
                    Margin="0,5,5,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Grid.Column="0"
                    Grid.Row="2"
                    Text="Sirstrap font family:" />
                <ComboBox
                    Width="200"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Left"
                    BorderThickness="0"
                    Grid.Column="1"
                    Grid.Row="2"
                    CornerRadius="999"
                    ItemsSource="{Binding FontFamilies}"
                    SelectedItem="{Binding Settings.FontFamily}">
                    <ComboBox.Styles>
                        <Style Selector="ComboBox /template/ Popup">
                            <Setter Property="HorizontalOffset" Value="0" />
                            <Setter Property="Placement" Value="BottomEdgeAlignedLeft" />
                        </Style>
                    </ComboBox.Styles>
                </ComboBox>
                <TextBlock
                    Margin="0,5,5,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Grid.Column="0"
                    Grid.Row="3"
                    Text="Enable Roblox multi-instance:" />
                <CheckBox
                    Height="32"
                    Margin="10,5,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Grid.Column="1"
                    Grid.Row="3"
                    CornerRadius="999"
                    DataContext="{Binding Settings}"
                    IsChecked="{Binding MultiInstance}" />
                <TextBlock
                    Margin="0,5,5,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Grid.Column="0"
                    Grid.Row="4"
                    Text="Enable Roblox incognito:" />
                <CheckBox
                    Height="32"
                    Margin="10,5,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Grid.Column="1"
                    Grid.Row="4"
                    CornerRadius="999"
                    DataContext="{Binding Settings}"
                    IsEnabled="{Binding MultiInstance}"
                    IsChecked="{Binding Incognito}" />
                <TextBlock
                    Margin="0,5,5,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Grid.Column="0"
                    Grid.Row="5"
                    Text="Enable Roblox API/Disable Sirstrap API:" />
                <CheckBox
                    Height="32"
                    Margin="10,5,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Grid.Column="1"
                    Grid.Row="5"
                    CornerRadius="999"
                    DataContext="{Binding Settings}"
                    IsChecked="{Binding RobloxApi}" />
                <TextBlock
                    Margin="0,5,5,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Grid.Column="0"
                    Grid.Row="6"
                    Text="Roblox CDN URI:" />
                <TextBox
                    Width="200"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Left"
                    BorderThickness="0"
                    Grid.Column="1"
                    Grid.Row="6"
                    CornerRadius="999"
                    DataContext="{Binding Settings}"
                    Text="{Binding RobloxCdnUri}" />
                <TextBlock
                    Margin="0,5,5,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Grid.Column="0"
                    Grid.Row="7"
                    Text="Roblox version override:" />
                <TextBox
                    Width="200"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Left"
                    BorderThickness="0"
                    Grid.Column="1"
                    Grid.Row="7"
                    CornerRadius="999"
                    DataContext="{Binding Settings}"
                    Text="{Binding RobloxVersionOverride}" />
                <TextBlock
                    Margin="0,5,5,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Grid.Column="0"
                    Grid.Row="8"
                    Text="SirHurt path:" />
                <Grid
                    Margin="0,5,0,0"
                    Grid.Column="1"
                    Grid.Row="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <TextBox
                        Margin="0,0,2.5,0"
                        HorizontalAlignment="Stretch"
                        BorderThickness="0"
                        Grid.Column="0"
                        CornerRadius="999"
                        DataContext="{Binding Settings}"
                        Text="{Binding SirHurtPath}"
                        IsReadOnly="True" />
                    <Button
                        Height="32"
                        Margin="2.5,0,0,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        BorderThickness="0"
                        Classes="hover-lift"
                        Command="{Binding RunSirHurtCommand}"
                        Grid.Column="1"
                        ToolTip.Tip="Run SirHurt"
                        CornerRadius="999"
                        IsEnabled="{Binding Settings.RunSirHurtEnabled}">
                        <Image Margin="2.5" Source="avares://Sirstrap/Assets/run.png" />
                    </Button>
                </Grid>
                <Grid
                    Margin="0,5,0,0"
                    Grid.Column="1"
                    Grid.Row="9">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        Height="32"
                        Margin="0,0,2.5,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        BorderThickness="0"
                        Classes="hover-lift"
                        Command="{Binding OpenIniFileCommand}"
                        Grid.Column="0"
                        ToolTip.Tip="Open"
                        CornerRadius="999">
                        <Image Margin="2.5" Source="avares://Sirstrap/Assets/open.png" />
                    </Button>
                    <Button
                        Height="32"
                        Margin="2.5,0,0,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        BorderThickness="0"
                        Classes="hover-lift"
                        Command="{Binding SaveCommand}"
                        Grid.Column="1"
                        ToolTip.Tip="Save"
                        CornerRadius="999">
                        <Image Margin="2.5" Source="avares://Sirstrap/Assets/save.png" />
                    </Button>
                </Grid>
            </Grid>
        </Border>
        <TextBlock
            Margin="0,9,0,4"
            HorizontalAlignment="Center"
            Grid.Row="3"
            FontSize="10"
            Text="{Binding CurrentFullVersion}" />
    </Grid>
</Window>
